{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "DebugBuild",
      "type": "shell",
      "command": "cd build/debug && cmake ../.. -DALL_BUILD=OFF -DCMAKE_BUILD_TYPE=Debug && ninja",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ReleaseBuild",
      "type": "shell",
      "command": "cd build/release && cmake ../.. -DALL_BUILD=ON -DCMAKE_BUILD_TYPE=Release && ninja"
    },
    {
      "label": "WebBuild",
      "type": "shell",
      "command": "cd build/web && emcmake cmake -DCMAKE_BUILD_TYPE=Debug ../..  && emmake make -j8"
    },
    {
      "label": "WebRun",
      "type": "shell",
      "command": "cd build/web/game && emrun --port 8080 index.html"
    }
  ]
}